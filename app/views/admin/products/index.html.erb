<header>
  <div class="pull-right">
    <%= link_to 'Nuevo Producto', new_admin_product_path, class: 'btn btn-success' %>
  </div>
  <h1>Listado de Productos</h1>
</header>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Nombre</th>
      <th>Descripción</th>
      <th class="text-center" >Precio</th>
      <th class="text-center" >Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="text-center"><%= image_tag product.picture, width: '50' %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td class="text-center" ><%= number_to_currency product.price, precision: 0 %></td>
        <td class="text-center" ><%= product.quantity %></td>
        <td>
          <%= link_to edit_admin_product_path(product), class: 'btn btn-default btn-sm' do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Editar
          <% end  %>
        </td>
        <td>
          <%= link_to admin_product_path(product), method: :delete,
                      class: 'btn btn-default btn-sm', data: { confirm: 'Estás seguro que deseas borrar este producto?' } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            Borrar
          <% end  %>
      </tr>
    <% end %>
  </tbody>
</table>